# -*- mode: snippet -*-
# name: executable
# key: exe
# --

########################################

### Target: $1 ###

file(GLOB_RECURSE ${2:SOURCES} "${3:src}/*.c")
add_executable($1 SHARED \${$2})
target_include_directories($1 PRIVATE "$3")
target_link_libraries(
  $1
)
install(TARGETS $1 DESTINATION bin)

########################################
